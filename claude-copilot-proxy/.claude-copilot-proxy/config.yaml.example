# Claude Code -> GitHub Copilot Proxy Configuration
# Uses wildcard routing with model aliases for flexibility
# Example file - copy to config.yaml

model_list:
  # Wildcard catches all models and routes to GitHub Copilot
  - model_name: "*"
    litellm_params:
      model: github_copilot/*
      api_key: os.environ/GITHUB_TOKEN

litellm_settings:
  # Drop unsupported parameters when calling GitHub Copilot
  drop_params: true

router_settings:
  # Retry failed requests
  num_retries: 2

  # Timeout for requests (5 minutes)
  timeout: 300

  # Routing strategy
  routing_strategy: simple-shuffle

  # Model aliases - map Claude Code model names to GitHub Copilot models
  # Run ./update-models to refresh this list
  model_group_alias:
    # Supported models (synced by update-models script)
    "claude-haiku-4.5": "claude-haiku-4.5"
    "claude-opus-4.5": "claude-opus-4.5"
    "claude-sonnet-4": "claude-sonnet-4"
    "claude-sonnet-4.5": "claude-sonnet-4.5"
    "gpt-4o": "gpt-4o"
    # Claude Code compatibility aliases (map old model IDs to new ones)
    "claude-3-5-haiku-20241022": "claude-haiku-4.5"
    "claude-haiku-4-5-20251001": "claude-haiku-4.5"
    "claude-sonnet-4-20250514": "claude-sonnet-4"
    "claude-sonnet-4-5-20250929": "claude-sonnet-4.5"
    "claude-opus-4-20250514": "claude-opus-4.5"
    "claude-opus-4-5-20251101": "claude-opus-4.5"
    "claude-3-5-sonnet-20241022": "claude-sonnet-4"

  # Default headers sent with all requests
  default_litellm_params:
    extra_headers:
      Editor-Version: "vscode/1.95.0"
      Editor-Plugin-Version: "copilot-chat/0.22.4"
      Openai-Organization: "github-copilot"
      Openai-Intent: "conversation-panel"
      Copilot-Vision-Request: "true"
